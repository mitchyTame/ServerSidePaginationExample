}

<div class="container">
    <div class="row" style="padding:20px">
        <div class="col-md-12">
            <table class="table table-striped" id="myTable">
                <thead>
                    <tr>
                        <th>
                            Name
                        </th>
                        <th>
                            City
                        </th>
                        <th>
                            Postal
                        </th>
                        <th>
                            Email
                        </th>
                        <th>
                            Company
                        </th>
                        <th>
                            Account
                        </th>
                        <th>
